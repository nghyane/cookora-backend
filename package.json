{
  "name": "cookora-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts --host 0.0.0.0",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun run dist/index.js --host 0.0.0.0",
    "test": "bun test",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "check": "biome check --fix .",
    "format": "biome format --write .",
    "lint": "biome lint --fix ."
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.3",
    "@scalar/hono-api-reference": "^0.9.19",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.8",
    "hono-openapi": "^0.4.8",
    "openai": "^5.22.0",
    "postgres": "^3.4.7",
    "redis": "^5.8.2",
    "zod": "^4.1.9",
    "zod-openapi": "^5.4.1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.2",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2"
  }
}
